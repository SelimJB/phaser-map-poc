{
  "singleQuote": true,
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "useTabs": true
      }
    },
    {
      "files": ["*.json", "*.jsonc", ".eslintrc"],
      "options": {
        "trailingComma": "none",
        "tabWidth": 4,
        "useTabs": true
      }
    }
  ]
}
